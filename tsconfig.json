{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "incremental": true,
    "outDir": "./build",
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "./node_modules",
    "./test",
    "./build"
  ]
}
